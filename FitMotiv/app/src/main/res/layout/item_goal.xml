<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardGoal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvGoalDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание цели"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvGoalTargetWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Целевой вес: 75 кг"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvGoalWorkoutsPerWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тренировок в неделю: 4"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvGoalStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="В процессе"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnDeleteGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить"
            android:layout_gravity="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

