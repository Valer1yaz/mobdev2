<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тип тренировки"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDialogType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Кардио"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Описание"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDialogDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Описание тренировки"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дата и время"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDialogDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01.01.2024 10:00"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Длительность"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDialogDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="60 минут"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сожжено калорий"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDialogCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="450 ккал"
        android:textSize="16sp"
        android:layout_marginTop="4dp" />

</LinearLayout>

